<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#71a6c6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="0.2"
        android:background="#e50085f8"
        >
          <TextView
              android:id="@+id/tv_title_webview"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="adasdasdsadsad"
              android:textSize="20sp"
              android:textColor="#fff"
              android:layout_alignParentLeft="true"
              android:layout_centerVertical="true"
              />
          <ImageButton
              android:id="@+id/imgbtn_webview"
              android:layout_centerVertical="true"
              android:background="#00000000"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:src="@drawable/ic_close_red_900_24dp"
              />
    </RelativeLayout>

      <WebView
          android:id="@+id/webpageview"
          android:layout_marginLeft="1dp"
          android:layout_marginRight="1dp"
          android:layout_marginBottom="2dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

      </WebView>

</LinearLayout>
